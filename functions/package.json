{
  "name": "event-manager-functions",
  "description": "Cloud Functions for Event Manager application",
  "scripts": {
    "generate:keys:dev": "cp server/services-config/app.prod.json server/services-config/app.json && cp server/services-config/app.web.prod.json server/services-config/app.web.json",
    "serve": "npm run generate:keys:dev && firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "mocha --reporter spec"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-multipart-file-parser": "^0.1.2",
    "firebase": "^7.14.0",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.0",
    "json2csv": "^5.0.0",
    "morgan": "^1.10.0",
    "uuid": "^7.0.3",
    "xhr2": "^0.2.0"
  },
  "private": true,
  "engines": {
    "node": "10"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "ava": "^3.6.0",
    "chai": "^4.2.0",
    "firebase-functions-test": "^0.2.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2"
  },
  "mocha": {
    "reporter": "spec",
    "ui": "bdd",
    "timeout": "8000",
    "exclude": "test/utils/*.js"
  }
}
